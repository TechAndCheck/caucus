<% if flash[:alert] %>
  <div class="alert alert-dismissible alert-danger" role="alert">
    <strong>Error:</strong> <%= flash[:alert].html_safe %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

