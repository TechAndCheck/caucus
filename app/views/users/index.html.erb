<div class="container profile-manage-form">
  <div class="card col-md-6 offset-md-3">
    <div class="card-body">
      <h5 class="card-title">Edit Your Profile</h5>
      <p class="card-text">
        <%= form_with(model: current_user) do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
          </div>
          <div class="form-group">
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
          </div>
          <%= f.submit "Save Profile Changes", class: "btn btn-primary" %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="card col-md-6 offset-md-3">
    <div class="card-body">
      <h5 class="card-title">Change Your Password</h5>
      <p class="card-text">
        <%= form_with(model: current_user) do |f| %>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "New Password" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
          </div>
          <%= f.submit "Save New Password", class: "btn btn-primary" %>
        <% end %>
      </p>
    </div>
  </div>
</div>
